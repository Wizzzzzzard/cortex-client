{
  "name": "cortex-client Go Dev Container",
  "image": "mcr.microsoft.com/devcontainers/go:1-1.24-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": true,
        "go.formatTool": "gofmt",
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "package"
      },
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "mounts": [
    "source=unix:///mnt/wsl/podman-sockets/podman-machine-default/podman-root.sock,target=unix:///mnt/wsl/podman-sockets/podman-machine-default/podman-root.sock,type=bind"
  ],
  "forwardPorts": [9090, 9091]
}
